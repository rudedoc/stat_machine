.container.py-4
  .d-flex.justify-content-between.align-items-center.mb-4
    %nav{ "aria-label" => "breadcrumb" }
      %ol.breadcrumb.mb-0
        %li.breadcrumb-item.active Countries
    .d-flex.align-items-center.gap-3
      #user-profile-nav

  - if @countries.present?
    .row.g-3
      - @countries.each do |country|
        .col-6.col-md-3.col-lg-2
          = link_to country_competitions_path(country), class: "card text-center p-3 text-decoration-none shadow-sm h-100 hover-elevate" do
            - display_flag = country.flag.presence || country.country_code
            .h4.mb-1= display_flag
            .fw-bold.text-dark= country.name
            - metadata_parts = [country.country_code, country.region, country.subregion].compact
            - if metadata_parts.any?
              .small.text-muted= metadata_parts.join(" / ")
            .small.text-muted= pluralize(country.events.count, "Event")
  - else
    .text-center.py-5
      %p.text-muted Countries have not been synced yet.
      = link_to "Refresh countries", countries_path, class: "btn btn-outline-primary"

:css
  .hover-elevate:hover {
    transform: translateY(-3px);
    transition: transform 0.2s ease;
    background-color: #f8f9fa;
  }
